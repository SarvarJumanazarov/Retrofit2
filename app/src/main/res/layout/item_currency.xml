<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/codeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="code"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/ccyTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ccy"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/codeTxt"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/ccyNmRuTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ccyTxt"
        android:gravity="center"
        android:text="ccyNmRu"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/ccyNmUzTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ccyNmRuTxt"
        android:gravity="center"
        android:text="ccyNmUz"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/ccyNmEnTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ccyNmUzTxt"
        android:gravity="center"
        android:text="ccyNmEn"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/nominalTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ccyNmEnTxt"
        android:gravity="center"
        android:text="nominal"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/rateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/nominalTxt"
        android:text="rate"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/diffTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="diff"
        app:layout_constraintTop_toBottomOf="@+id/rateTxt"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="date"
        app:layout_constraintTop_toBottomOf="@+id/diffTxt"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="140dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

